<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BerandaDosenActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/menu_toolbarberandadosen" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/greeting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Assalamualaikum"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:textColor="#000080"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/dosen_name"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="50dp"
                android:textSize="25sp"
                android:textColor="#05F45D"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="16dp"/>


        <!-- Box 1 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#eff1f8"
                android:layout_marginTop="70dp">



            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="     Setiap hari, sedikit demi sedikit, mari kita tambahkan hafalan Al-Qur'an ke dalam hati kita."
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:padding="16dp"
                android:lineSpacingExtra="6dp"/>
        </androidx.cardview.widget.CardView>


        </FrameLayout>

        </FrameLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/sidebardosen" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>