<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/title1"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_progress_bar"
        android:max="100"/>

    <TextView
        android:id="@+id/percentage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar1"
        android:layout_marginTop="5dp"
        android:text="0%"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentage1"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/title2"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_progress_bar"
        android:max="100"/>

    <TextView
        android:id="@+id/percentage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar2"
        android:layout_marginTop="5dp"
        android:text="0%"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentage2"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/title3"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_progress_bar"
        android:max="100"/>

    <TextView
        android:id="@+id/percentage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar3"
        android:layout_marginTop="5dp"
        android:text="0%"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentage3"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/title4"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_progress_bar"
        android:max="100"/>

    <TextView
        android:id="@+id/percentage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar4"
        android:layout_marginTop="5dp"
        android:text="0%"
        android:textColor="@android:color/black" />


</RelativeLayout>
